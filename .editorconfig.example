# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,json,vue,scss,rb,haml,yml}]
indent_size = 2
indent_style = space

[*.{js,json,vue,scss,rb,haml,yml,md}]
indent_style = space

# Set default charset
[*.rb]
charset = utf-8
