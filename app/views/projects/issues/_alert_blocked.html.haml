.hidden.js-close-blocked-issue-warning.gl-alert.gl-alert-warning{ role: 'alert' }
  = sprite_icon('warning', size: 16, css_class: 'gl-icon gl-alert-icon')
  %h4.gl-alert-title
    = s_('Are you sure you want to close this blocked issue?')
  .gl-alert-body
    = s_('This issue is currently blocked by the following issues: ')
  .gl-alert-actions
    = link_to "Yes, close issue", close_issuable_path(issue), rel: 'nofollow', method: '',
              class: "btn btn-close-anyway gl-alert-action btn-warning btn-md new-gl-button", title: "Yes, close issue"
    %button.btn.gl-alert-action.btn-warning.btn-md.new-gl-button.btn-secondary
      = s_('Cancel')
